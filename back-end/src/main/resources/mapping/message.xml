<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.chatonline.Dao.MessageDao">

    <insert id="InsertMessage" >
        insert into message(sendid,reciveid,sendtime,messagetext,texttype)
        value(#{sendid},#{reciveid},#{sendtime},#{messagetext},${texttype})
    </insert>

    <select id="FindVerifyMessage" resultType="boolean">
        select count(*) from veritymessage where sendId = #{sendid} and reciveId=#{reciveid}
    </select>
    <delete id="DelVerifyMessage">
        delete  from veritymessage where sendId=#{sendid} and reciveId=#{reciveid}
    </delete>
    <insert id="AddVerifyMessage">
        insert into veritymessage() value(#{message.sendid},#{message.reciveid},#{message.messagetext},0,#{groupname},#{note})
    </insert>
</mapper>